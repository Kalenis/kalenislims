<?xml version="1.0"?>
<tryton>
    <data>

        <!-- Price list -->
        <record model="ir.ui.view" id="price_list_view_form">
            <field name="model">lims.price_list</field>
            <field name="type">form</field>
            <field name="name">price_list_form</field>
        </record>

        <record model="ir.ui.view" id="price_list_view_tree">
            <field name="model">lims.price_list</field>
            <field name="type">tree</field>
            <field name="name">price_list_tree</field>
        </record>

        <record model="ir.action.act_window" id="act_lims_price_list_form">
            <field name="name">Price Lists</field>
            <field name="res_model">lims.price_list</field>
        </record>
        <record model="ir.action.act_window.view" id="act_lims_price_list_form_view1">
            <field name="sequence" eval="10"/>
            <field name="view" ref="price_list_view_tree"/>
            <field name="act_window" ref="act_lims_price_list_form"/>
        </record>
        <record model="ir.action.act_window.view" id="act_lims_price_list_form_view2">
            <field name="sequence" eval="20"/>
            <field name="view" ref="price_list_view_form"/>
            <field name="act_window" ref="act_lims_price_list_form"/>
        </record>
        <menuitem parent="product.menu_main_product"
            sequence="20" id="menu_lims_price_list"
            action="act_lims_price_list_form"/>

          <!-- Price list Line -->
        <record model="ir.ui.view" id="price_list_line_view_form">
            <field name="model">lims.price_list.line</field>
            <field name="type">form</field>
            <field name="name">price_list_line_form</field>
        </record>

        <record model="ir.ui.view" id="price_list_line_view_tree">
            <field name="model">lims.price_list.line</field>
            <field name="type">tree</field>
            <field name="name">price_list_line_tree</field>
        </record>

        <record model="ir.ui.view" id="price_list_line_view_tree_sequence">
            <field name="model">lims.price_list.line</field>
            <field name="type">tree</field>
            <field name="priority" eval="20"/>
            <field name="name">price_list_line_tree_sequence</field>
        </record>

        <record model="ir.action.act_window" id="act_lims_price_list_lines_form">
            <field name="name">Price Lists Lines</field>
            <field name="res_model">lims.price_list.line</field>
        </record>
        <record model="ir.action.act_window.view" id="act_lims_price_list_lines_view1">
            <field name="sequence" eval="10"/>
            <field name="view" ref="price_list_line_view_tree"/>
            <field name="act_window" ref="act_lims_price_list_lines_form"/>
        </record>
        <record model="ir.action.act_window.view" id="act_lims_price_list_lines_view2">
          <field name="sequence" eval="20"/>
          <field name="view" ref="price_list_line_view_form"/>
          <field name="act_window" ref="act_lims_price_list_lines_form"/>
        </record>

        <menuitem name="Price Lists Lines" parent="product.menu_main_product"
              sequence="30" action="act_lims_price_list_lines_form"
              id="menu_lims_price_list_lines"/>

        <!-- Update price list lines -->
        <record model="ir.ui.view" id="update_price_list_lines_ask_form">
            <field name="model">lims.price_list.update_lines.ask</field>
            <field name="type">form</field>
            <field name="name">update_price_list_lines_ask_form</field>
        </record>

        <record model="ir.action.wizard" id="wizard_update_price_list_lines">
            <field name="name">Update Price List Lines</field>
            <field name="wiz_name">lims.price_list.update_lines</field>
        </record>
        <record model="ir.action.keyword" id="update_price_list_lines_keyword">
            <field name="keyword">form_action</field>
            <field name="model">lims.price_list,-1</field>
            <field name="action" ref="wizard_update_price_list_lines"/>
        </record>

        <!-- Price list report -->
        <record model="ir.ui.view" id="print_price_list_start_view_form">
            <field name="model">lims.price_list.print_report.start</field>
            <field name="type">form</field>
            <field name="name">print_price_list_start_form</field>
        </record>
        <record model="ir.action.report" id="report_price_list">
            <field name="name">Print Price List</field>
            <field name="model">lims.price_list</field>
            <field name="report_name">lims.price_list.report</field>
            <field name="report">lims_price_list/report/price_list.odt</field>
        </record>

        <record model="ir.action.wizard" id="wizard_print_price_list">
            <field name="name">Print Price List</field>
            <field name="wiz_name">lims.price_list.print_report</field>
        </record>
        <menuitem parent="product.menu_main_product" action="wizard_print_price_list"
            id="menu_lims_price_list_report" sequence="40" icon="tryton-print"
            name="Print Price List"/>

    </data>
</tryton>
