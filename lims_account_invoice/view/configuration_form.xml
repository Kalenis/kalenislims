        <field name="invoice_condition"/>
        <label name="invoice_party_change_relation_type"/>
        <field name="invoice_party_change_relation_type"/>
    </xpath>
    <xpath expr="/form/notebook/page[@id='general']" position="after">
        <page string="Mail Invoice Report" id="mail_send_invoice_report">
